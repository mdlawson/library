<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
	<h3 id="modalTitle">{{ title }}</h3>
</div>
<div id="modalBody" class="modal-body">
	<img src="http://covers.openlibrary.org/b/isbn/{{ ISBN }}-L.jpg" class="img-polaroid"> 
	<dl class="dl-horizontal">
		<dt>Title</dt>
		<dd>{{ title }}</dd>
		<dt>Author</dt>
		<dd>{{ author }}</dd>
		<dt>Date</dt>
		<dd>{{Date date }}</dd>
		<dt>Description</dt>
		<dd>{{ description }}</dd>
	</dl>
</div>
<div id="modalFooter" class="modal-footer">
	<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
	{{#if loaned}}
	<button class="btn btn-primary reserve" data-loading-text="Renewing..." data-complete-text="Renewed!">Renew</button>
	{{else}}
	{{#if reserved}}
	<button class="btn btn-primary reserve" data-loading-text="Canceling..." data-complete-text="Canceled!">Unreserve</button>
	{{else}}
	<button class="btn btn-primary reserve" data-loading-text="Reserving..." data-complete-text="Reserved!">Reserve</button>
	{{/if}}
	{{/if}}
</div>