@import 'nib'

// VARIABLES

// GENERAL

html, body
  height: 100%

.navbar li
  cursor: pointer

#container
  padding: 0
  position: relative

.content
  height: 100%
  position: relative
  //overflow: hidden
  display: none

.content.visible
  display: block

// LOGIN

#login 
  form
    margin-top: 10%

// CATALOGUE/USERS

#catalogue, #users
  .search
    padding: 20px 0 20px
    background: rgba(0,0,0,0.1)
  .list
    list-style-type: none;
    height: 100%
    overflow: auto

#catalogue.advanced, #users
  .list
    margin: 0
    background: #F2F2F2
    height: 100%
    position: relative
    li
      cursor: pointer
      width: 85%
      padding: 20px 10% 20px 5%
      background: linear-gradient(top, #F2F2F2, #D2D2D2)
      font-size: 1.2em
      color: rgba(0,0,0,0.8)
      white-space: nowrap
      text-overflow: ellipsis
      overflow: hidden
      .id
        color: rgba(0,0,0,0.2)
        font-size: 3em
        display: inline-block
        vertical-align: middle
        margin-right: 10px
        text-align: right
        width: 1.5em
      &.active
        background: linear-gradient(top, lighten(#345363, 30%), #345363)
  .new
    position: absolute
    height: 20px
    bottom: 0px
    margin: 0px
    display: block
    text-align: center
    color: white
    background: linear-gradient(top, #5C5C5C, #373737)
  .panel
    //position: absolute
    //top: 111px
    //bottom: 0px
    margin: 20px 10px 20px
    height: 100%
    overflow: auto
    img
      float: left
      width: 200px
      height: 300px
    form
      float: left
      margin-bottom: 5px
      div
        margin-left: 20px
        float: left
      textarea,.desc
        margin-left: 20px
      textarea
        width: 445px
        height: 150px
    .buttons
      position: relative
      clear: both
      button
        width: 100px
// BASIC CATALOGUE

#catalogue.basic
  .list
    background: none
    li
      padding: 20px
      width: 140px
      height: 260px
      float: left
      text-align: center
      white-space: nowrap
      text-overflow: ellipsis
      overflow: hidden
      img
        height: 200px
  #bookModal
    img
      height: 200px
      float: left
    dl
      float: left

// ISSUE/RETURN

#issue,#return
  .column
    padding-top: 20px
    .books
      margin: 0
      list-style-type: none;
      padding 0 0 20px 0
      li
        padding: 15px 0
        .id
          color: rgba(0,0,0,0.2)
          font-size: 3em
          display: inline-block
          vertical-align: middle
          text-align: right
          width: 1.5em
        button
          margin-right: 10px
          float: right
      li:nth-child(odd)
        background: rgba(0,0,0,0.05)
      li:nth-child(even)
        background: rgba(0,0,0,0,0.1)
    input
      float: left

    button
      //float: right
      //width: 18%
      margin-bottom: 9px